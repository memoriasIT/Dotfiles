#	>>>	   VISUAL	<<< 

# >_Font
font pango:monospace 8 

# >_Gaps
for_window [class="^.*"] border pixel 3
new_window pixel 2
gaps inner 20
gaps outer 10
smart_gaps on
hide_edge_borders both



# >_Window
# General
default_orientation horizontal
hide_edge_borders both

#Colors
#Class            Border              Background         Text                 Indicator
client.focused    #00BFFF             #00BFFF            #00BFFF              #00BFFF
 
client.unfocused  $inactive-bg-color $inactive-bg-color $inactive-text-color #00BFFF
 
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00BFFF
 
client.urgent $urgent-bg-color $urgent-bg-color $text-color #00BFFF







